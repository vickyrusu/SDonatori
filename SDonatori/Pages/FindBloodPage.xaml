<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDonatori.Pages.FindBloodPage">
    <ContentPage.Content>
       <StackLayout VerticalOptions="Center" Margin="40,0,40,0">
            <Picker Title="Select blood Group" TextColor="#A5A7A8" x:Name="PickerBloodGroup">
                <Picker.Items>
                    <x:String>A+</x:String>
                    <x:String>B+</x:String>
                    <x:String>O+</x:String>
                    <x:String>AB+</x:String>
                </Picker.Items>
            </Picker>

           <Picker Title="Select Judetul" TextColor="#A5A7A8" x:Name="PickerJudetul">
               <Picker.Items>
                        <x:String>Alba</x:String>
                        <x:String>Hunedoara</x:String>
                        <x:String>Cluj</x:String>
                        <x:String>Brasov</x:String>
                        <x:String>Iasi</x:String>
                        <x:String>Covasna</x:String>
               </Picker.Items>
           </Picker>
            <Button BackgroundColor="#009688" Text="Search" TextColor="White" x:Name="BtnSearch" Clicked="BtnSearch_OnClicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>